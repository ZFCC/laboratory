<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zky.laboratory.dao.TeacherDao">

    <select id="selectTeacherByName" resultType="com.zky.laboratory.entry.Teacher">
        select * from teacher WHERE name=#{name}
    </select>

    <insert id="insetTeacher" parameterType="com.zky.laboratory.entry.Teacher">
        INSERT INTO teacher (
          name,
          tittle,
          sex,
          birthday,
          subject,
          phone,
          address,
          education,
          organization,
          remark
        )VALUES (
          #{name},
          #{tittle},
          #{sex},
          #{birthday},
          #{subject},
          #{phone},
          #{address},
          #{education},
          #{organization},
          #{remark}
        )
    </insert>
    <update id="updateTeacher" parameterType="com.zky.laboratory.entry.Teacher">
        UPDATE teacher SET
        <if test="name != null">
            name = #{name},
        </if>
        <if test="tittle != null">
            tittle = #{tittle},
        </if>
        <if test="sex != null">
            sex = #{sex},
        </if>
        <if test="birthday != null">
            birthday = #{birthday},
        </if>
        <if test="subject != null">
            subject = #{subject},
        </if>
        <if test="phone != null">
            phone = #{phone},
        </if>
        <if test="address != null">
            address = #{address},
        </if>
        <if test="education != null">
            education = #{education},
        </if>
        <if test="organization != null">
            organization = #{organization},
        </if>
        <if test="remark != null">
            remark = #{remark}
        </if>
        WHERE teacher_id = #{teacherId}
    </update>
    <select id="selectByPage" resultType="com.zky.laboratory.entry.Teacher">
        SELECT *
        FROM teacher t
        WHERE
        1=1
          <if test="name !=null" >
              AND   t.name =#{name}
          </if>
        <if test="subject !=null" >
            AND   t.subject =#{subject}
        </if>
        <if test="education !=null" >
            AND  t.education =#{education}
        </if>
        <if test="organization !=null" >
            AND t.organizationname =#{organization}
        </if>
    </select>

</mapper>